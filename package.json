{
  "name": "chat-app",
  "version": "1.0.0",
  "description": "Chat application with Express.js and TypeScript",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"parcel watch src/client/index.html --dist-dir dist/public\" \"node --watch dist/server.js\"",
    "build": "tsc && parcel build src/client/index.html --dist-dir dist/public",
    "start": "node dist/server.js",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "parcel": "^2.10.3",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "templator-evgdudareff": "^1.0.4"
  }
}
